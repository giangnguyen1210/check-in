<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checkin.mapper.UnitMapper">

    <insert id="createUnit">
        insert into unit(name, code) values (#{name}, #{code})
    </insert>
    <select id="listUnit" resultType="com.checkin.dto.response.UnitResponse">
        select * from unit
    </select>
    <select id="checkUnitExist" resultType="java.lang.Integer">
        select * from unit where name=#{name}
    </select>
    <select id="getNextCode" resultType="com.checkin.dto.response.UnitResponse">
        SELECT * FROM unit ORDER BY code DESC LIMIT 1
    </select>
</mapper>