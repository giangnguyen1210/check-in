<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checkin.mapper.SettingSessionMapper">
    <insert id="insertSetting">
        insert into setting_session (interval_time,
                                      max_wrong_time,
                                      max_time,
                                      time_login_again,
                                      created_at,
                                      status_id)
        values (
                #{intervalTime},
                #{maxWrongTime},
                #{maxTime},
                #{timeLoginAgain},
                now(),
                1
               )
    </insert>
    <update id="updateSetting">
        update setting_session
        set status_id = 2,
            updated_at = now()
        where id=#{id};
    </update>
    <select id="getSetting" resultType="com.checkin.dto.response.SettingSessionResponse">
        select * from setting_session where status_id = 1
    </select>

    <!--    <select id="getSetting">-->
<!--        select * from setting_password where status_id = 1-->
<!--    </select>-->
</mapper>