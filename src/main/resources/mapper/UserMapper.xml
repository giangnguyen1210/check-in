    <select id="getListUser" resultType="com.checkin.dto.response.UserResponse">
        SELECT  users.*,
                role.name as role,
                status.name as status,
                department.name as department,
                gender.name as gender,
                job_title.name as jobtitle,
                unit.name as unit,
                position.name as position
        FROM users
        LEFT JOIN role ON users.role_id = role.id
        LEFT JOIN status ON users.status_id = status.id
        LEFT JOIN department ON users.department_id = department.id
        LEFT JOIN gender ON users.gender_id = gender.id
        LEFT JOIN job_title ON users.job_title_id = job_title.id
        LEFT JOIN unit ON users.unit_id = unit.id
        LEFT JOIN position ON users.position_id = position.id
        <where>
            <if test="keyword != null and keyword != ''">
                AND (
                LOWER(users.fullname) LIKE CONCAT('%', LOWER(#{keyword}), '%')
                OR users.email LIKE CONCAT('%', #{keyword}, '%')
                OR users.employee_code LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
            <if test="departmentId != null and departmentId != ''">
                AND users.department_id = #{departmentId}
            </if>
            <if test="genderId != null and genderId != ''">
                AND users.gender_id = #{genderId}
            </if>
            <if test="jobTitleId != null and jobTitleId != ''">
                AND users.job_title_id = #{jobTitleId}
            </if>
            <if test="statusId != null and statusId != ''">
                AND users.status_id = #{statusId}
            </if>
        </where>
        <if test="limit > 0">
            OFFSET (#{page} - 1) * #{limit} FETCH NEXT #{limit} ROWS ONLY
        </if>
    </select>


