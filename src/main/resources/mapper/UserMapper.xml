<mapper namespace="com.checkin.mapper.UserMapper">

    <insert id="createUser" parameterType="com.checkin.dto.request.UserRequest">
        insert into users(
            "employee_code",
            "fullname",
            "email",
            "password",
            "avatar",
            "role_id",
            "status_id",
            "gender_id",
            "phone",
            "department_id",
            "unit_id",
            "job_title_id",
            "position_id",
            "cccd",
            "cccd_image",
            "face_image",
            "dob"
        )VALUES(
           #{employeeCode},
           #{fullname},
           #{email},
           #{password},
           #{avatar},
           2,
            1,
            #{genderId},
            #{phone},
            #{departmentId},
            #{unitId},
            #{jobTitleId},
            #{positionId},
            #{cccd},
            #{cccdImage},
            #{faceImage},
                #{dob}
        )
    </insert>
    <update id="resetPassword">
        update users set password = #{password} where email = #{email}
    </update>
    <update id="updateUser">
        update users set
                         fullname=#{fullname},
                        dob=#{dob},
                        email=#{email},
                        gender_id = #{genderId},
                        phone=#{phone},
                        department_id=#{departmentId},
                        unit_id=#{unitId},
                        job_title_id=#{jobTitleId},
                        position_id=#{positionId},
                        cccd=#{cccd},
                        cccd_image=#{cccdImage},
                        face_image=#{faceImage}
        where employee_code = #{employeeCode}

    </update>
    <select id="findByEmail" resultType="com.checkin.dto.response.UserResponse">
        select * from users where email = #{email} limit 1
    </select>
    <select id="checkEmailExist" resultType="java.lang.Integer">
        select * from users where email = #{email} limit 1
    </select>
    <select id="totalUser" resultType="Integer">
        SELECT count(*) from users where status_id!=1
    </select>
