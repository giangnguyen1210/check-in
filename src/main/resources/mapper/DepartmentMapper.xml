<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checkin.mapper.DepartmentMapper">

    <insert id="createDepartment">
        insert into department(name, code) values (#{name}, #{code})
    </insert>
    <select id="listDepartment" resultType="com.checkin.dto.response.DepartmentResponse">
        select * from department
    </select>
    <select id="checkDepartmentExist" resultType="java.lang.Integer">
        select count(*) from department where name=#{name}
    </select>

    <select id="getNextCode" resultType="com.checkin.dto.response.DepartmentResponse">
        SELECT * FROM department ORDER BY code DESC LIMIT 1
    </select>
</mapper>